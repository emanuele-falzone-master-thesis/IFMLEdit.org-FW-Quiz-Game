<div data-bind="if: item">
<% switch (fields.length) {
       case 0: -%>
    <span class="title" data-bind="text: item().id" style="white-space: pre-wrap;"></span>
<%     break;
       case 1: -%>
    <span class="title" data-bind="text: item()['<%= fields[0] %>']" style="white-space: pre-wrap;"></span>
<%       break;
       default:
       for (var i = 0; i < fields.length; i += 1) { -%>
    <strong><%= fields[i]%></strong>
    <span data-bind="text: item()['<%= fields[i] %>']" style="white-space: pre-wrap;"></span><br>
<%     }
   } -%>
</div>
<% if (events.length) { -%>
<div class="card-action">
<%     for (var i = 0; i < events.length; i += 1) {
           if (events[i].stereotype == 'system') { -%>
    <c-<%= events[i].id %> params="trigger: trigger.bind($data,'<%= events[i].id %>')"></c-<%= events[i].id %>>
<%         } else { -%>
    <a class="waves-effect waves-light btn cyan" data-bind="click: trigger.bind($data, '<%= events[i].id %>')"><%= events[i].name %></a>
<%         }
       } -%>
</div>
<% } -%>
