
html, body, main-application, main-application > div, main-application > div > div {
    display: block;
    height: 100%;
}

top-logo {
    display: block;
    height: 15%;
    padding-bottom: 5%;
    background-image: url(../images/logo-full.png);
    background-size: auto 100%;
    background-position: top center;
    background-repeat: no-repeat;
    background-origin: content-box;
}

hover-logo {
    pointer-events: none;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-image: url("../images/logo-full.png");
    background-position: center;
    background-size: 80%;
    background-repeat: no-repeat;
}


/* View Container Home */

c-view-container-home {
    height: 100%;
    display: flex;
    flex-direction: column-reverse;
    padding: 5%;
    background-image: url("../images/logo-full.png"), url("../images/home-backgroud.jpg");
    background-size: 80%, 100%;
    background-repeat: no-repeat;
    background-position: center 5%, center bottom;
}

.options {
    border-radius: 10px;
    border-style: solid;
    font-weight: 900;
    margin-top: 1em;
    text-align: center;
    text-transform: uppercase;
    font-size: 4vw;
    padding-top: 3%;
    padding-bottom: 2%;
    background-color: #e2ecbb;
    color: #588f3e;
    border-color: white;
    width: 100%;
    display: table;
}

/* View Container Camera */

c-view-container-camera {
    display: block;
    height: 100%;
    background-image: url("../images/qr.png");
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center center;
}

/* View Container Question */

c-view-container-card {
    padding: 5%;
    display: block;
    height: 100%;
    background-image:  url("../images/answer-background.jpg");
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center bottom;
}

c-details-card-question {
    background-color: #588f3e;
    border-radius: 10px;
    border-style: solid;
    border-color: white;
    font-weight: 500;
    color: white;
    display: table;
    text-align: center;
    height: 20%;
    width: 100%;
}

c-details-card-question > div {
    padding: 5%;
    display: table-cell;
    vertical-align: middle;
    width: 100%;
    font-size: 4vw;
}

c-list-card-answers {
    display: block;
    height: 60%;
}

c-list-card-answers > div {
    margin-top: 2%;
    background-color: #e2ecbb;
    border-radius: 10px;
    border-style: solid;
    font-weight: 500;
    min-height: 23%;
    padding: 3%;
    text-align: center;
    width: 100%;
    display: table;
    color: #588f3e;
    border-color: white;
}

c-list-card-answers > div:last-child {
    margin-bottom: 5%;
}
c-list-card-answers > div > span {
    display: table-cell;
    vertical-align: middle;
    font-size: 4vw;
}

.correct {
    background: #588f3e;
    color: white;
}

.wrong {
    background: brown;
    color: white;
}

/* View Container Result */

c-view-container-card-result {
    background-image: url("../images/answer-background.jpg");
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center bottom;
    padding: 5%;
    display: block;
    height: 100%;
}

c-details-card-result > div {
    text-align: center;
}

.result-text > div:last-child {
    margin-bottom: 5%;
}

.result-image {
    background-repeat: no-repeat;
    background-size: 100%;
    background-position: bottom;
    height: 50%;
    border-radius: 10px;
    border-style: solid;
    border-width: medium;
    border-color: #447b1d;
}

.image-wrong {
    background-image: url(../images/boy-wrong.jpg);
}

.image-correct {
    background-image: url(../images/boy-correct.jpg);
}

.result-text {
    margin-top: 5%;
    background: #FFF69B;
    display: flex;
    flex-direction: column-reverse;
    font-size: large;
    height: 35%;
    border-radius: 10px 10px 0 0;
}

c-system-event-back-2 {
    display: block;
    padding: 3%;
    justify-content: space-between;
    border-radius: 0 0 10px 10px;
    background: #FFF69B;
}

c-system-event-back-2 > span, c-system-event-back-2 > span > a {
    display: block;
    width: 100%
}

c-system-event-back-2 > span > a {
    flex-basis: 100%;
    height: initial;
    background-color: #76961B !important;
}
